.detail
  .sort
    .sort--all
      All
    .sort--onair
      ライブ配信中
    .sort--planned
      公開予定
  .video-boxes-all
    - @videos_all_page.each do |video|
      .video-box
        .video-box--video
          %iframe#player{frameborder: "0", height:"118", src: "https://www.youtube.com/embed/#{video.videoId}", type: "text/html", width: "210"}
        .video-box--name
          = link_to "https://www.youtube.com/watch?v=#{video.videoId}", class: "video-box--name" do
            = video.name
        .video-box--channel
          = link_to "https://www.youtube.com/channel/#{video.vtuber.channel}", class: "video-box--channel" do
            = video.vtuber.channelTitle
        .video-box--status
          - if video.scheduledStartTime == nil then
            = video.publishedAt
          - elsif video.actualEndTime == nil then
            - if video.actualStartTime == nil then
              = video.scheduledStartTime.strftime("%Y.%m.%d %H:%M")
              から
              .planned
                公開予定
            - else
              = video.actualStartTime.strftime("%Y.%m.%d %H:%M")
              から
              .onair
                ライブ
          - else
            = video.actualEndTime.strftime("%Y.%m.%d %H:%M")
            配信済
  .pagination-all
    = paginate(@videos_all_page)

